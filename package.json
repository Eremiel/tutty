{
  "name": "dft-lab",
  "version": "0.1.0",
  "description": "Web-based DFT lab based on Quantum Espresso",
  "homepage": "https://github.com/FaradayInstitution/dft-lab",
  "repository": {
    "type": "git",
    "url": "git://git@github.com:FaradayInstitution/dft-lab.git"
  },
  "author": "Denis Kramer <d.kramer@soton.ac.uk> (https://www.kramergroup.science)",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src",
    "start": "concurrently npm:start:hugo npm:start:client npm:start:server",
    "start:hugo": "hugo -d ../dist/public -s site -vw",
    "start:client": "webpack --config webpack.client.dev.js --watch",
    "start:server": "ts-node-dev --respawn --transpileOnly ./src/server/bin/index.ts",
    "preview": "run-p preview:**",
    "preview:hugo": "yarn start:hugo -- -D -F",
    "preview:webpack": "yarn start:webpack",
    "prebuild": "rimraf dist",
    "build": "yarn build:webpack && yarn build:hugo",
    "build:server": "webpack --config webpack.server.dev.js",
    "build:preview": "yarn build:webpack && yarn build:hugo:preview",
    "build:hugo": "hugo -d ../dist/public -s site -v",
    "build:hugo:preview": "yarn build:hugo -- -D -F",
    "build:webpack": "cross-env NODE_ENV=production webpack --config webpack.prod.js --hot --inline"
  },
  "bin": {
    "wetty": "./bin/index.js"
  },
  "preferGlobal": "true",
  "dependencies": {
    "@types/express": "^4.16.1",
    "@types/lodash": "^4.14.123",
    "@types/socket.io-client": "^1.4.32",
    "concurrently": "^4.1.0",
    "connect-redis": "^3.4.1",
    "cookie-parser": "^1.4.3",
    "css-loader": "^2.1.1",
    "express": "^4.15.3",
    "express-session": "^1.16.1",
    "fs-extra": "^4.0.1",
    "helmet": "^3.16.0",
    "ldapjs": "^1.0.2",
    "lodash": "^4.17.11",
    "morgan": "^1.9.1",
    "node-pty": "^0.8.1",
    "node-sass": "^4.12.0",
    "optimist": "^0.6",
    "passport": "^0.4.0",
    "passport-github2": "^0.1.11",
    "passport.socketio": "^3.7.0",
    "pre-commit": "^1.2.2",
    "redis": "^2.8.0",
    "sass-loader": "^7.1.0",
    "serve-favicon": "^2.4.3",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.4.4",
    "ts-node-dev": "^1.0.0-pre.32",
    "typescript": "^3.4.5",
    "webpack": "^4.30.0",
    "winston": "^3.2.1",
    "xterm": "^3.12.2",
    "yarn": "^1.12.3"
  },
  "devDependencies": {
    "webpack-dev-server": "^3.3.1",
    "nodemon": "^1.18.11",
    "del": "^3.0.0",
    "es6-promise": "^4.1.1",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-standard": "10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.1.0",
    "eslint-plugin-standard": "^3.0.1",
    "webpack-cli": "^3.3.1"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src/server/bin"
    ],
    "exec": "yarn build:server",
    "ext": "ts"
  },
  "contributors": [
    "Denis Kramer <d.kramer@soton.ac.uk>"
  ]
}
